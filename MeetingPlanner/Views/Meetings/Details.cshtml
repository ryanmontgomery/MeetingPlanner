@model MeetingPlanner.Models.ViewModels.MeetingDetailsData

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Meeting</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Conducting
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Meeting.Bishopric.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Meeting.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Meeting.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Meeting.MeetingDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Meeting.MeetingDate)
        </dd>
    </dl>

    <h4>Agenda</h4>

    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(modelItem => Model.Events.First().Title)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => Model.Events.First().Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Events) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
    </tr>
}

</table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Meeting.ID }) |
    @Html.ActionLink("Edit Agenda", "../Events/EditAgenda", new { id = Model.Meeting.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
